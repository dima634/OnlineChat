
@inherits LayoutComponentBase

<MatThemeProvider Theme="_theme">
    <MatToastContainer />

    <MatAppBarContainer Class="h-100">
        <MatAppBar Fixed="false" Class="topbar">
            <MatAppBarRow>
                <MatAppBarSection>
                    <MatAppBarTitle>Online chat</MatAppBarTitle>
                </MatAppBarSection>
                <MatAppBarSection Align="MatAppBarSectionAlign.End">
                    <Auth />
                </MatAppBarSection>
            </MatAppBarRow>
        </MatAppBar>

        <MatAppBarContent Class="h-100">
            @Body
        </MatAppBarContent>
    </MatAppBarContainer>
</MatThemeProvider>

@code {
    private MatTheme _theme = new MatTheme()
    {
        Primary = "#3f51b5",
        OnPrimary = "#ffffff",
        Background = "#e1e2e1",
        Surface = "#f5f5f6"
    };
}
